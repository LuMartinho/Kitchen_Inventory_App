<%= render 'shared/errors', obj: @fridge %>
<div class="container">
    <div class="row">
        <br/><br/>
        <div class="col-md-8 col-md-offset-2">
            <div class="card card-block" style="background-color:#fff;">
                <div class="form-header  purple darken-4" style="background-color:#b579d2 !important;">
                    <h3>
                        <i class="fa fa-cutlery"></i>
                        Add New Item In To Your Fridge</h3>
                </div>

                <div class="md-form">
                    <%= simple_form_for @fridge do |f| %>

                    <form role="form">
                        <fieldset>
                            <div class="form-group">

                                <div class="col-sm-12">

                                    <%= f.text_field :Name, class: "form-control", placeholder: "Enter Item Name", autofocus: true %><br/>

                                </div>

                            </div>

                            <div class="form-group">

                                <div class="col-md-12">

                                    <div class="btn-group ">
                                        <br/>
                                        <%= f.text_field :Amount, class: "form-control", placeholder: "Enter Item Amount", autofocus: true %><br/>

                                    </div>
                                    <div class="btn-group ">
                                        <%= f.select(:Quantity, options_for_select([['Cup', 'Cup'],['CupCubes','CupCubes'],['CupPureed', 'CupPureed'],['CupSliced', 'CupSliced'],['CupDiced', 'CupDiced'],['CupShredded', 'CupShredded'],['CupMelted', 'CupMelted'], ['CupMashed',
                                        'CupMashed'],['CupBiteSize', 'CupBiteSize'],['CupCrushed', 'CupCrushed'],['CupChopped', 'CupChopped'],['CupHalves', 'CupHalves'],['Oz', 'Oz'],['FlOz', 'FlOz'],['TableSpoon', 'TableSpoon'],['TableSpoonMelted',
                                        'TableSpoonMelted'],['TableSpoonWhipped','TableSpoonWhipped'], ['TableSpoonChopped','TableSpoonChopped'], ['Stick','Stick'], ['Lb','Lb'], ['Kg','Kg'], ['Tsp','Tsp'], ['Quart','Quart'], ['Ml','Ml'], ['Liter','Liter'], ['Dash','Dash'],
                                        ['Strip','Strip'], ['Slice','Slice'], ['Can','Can'],['Piece','Piece'], ['Cube','Cube'], ['Spear','Spear'], ['Sprig','Sprig'], ['Package','Package'], ['Packet','Packet'], ['Pat','Pat'], ['Pinch','Pinch'], ['Ring','Ring'],
                                        ['BagSingleServing','BagSingleServing'], ['Small','Small'], ['Medium','Medium'],['Large','Large'], ['Gram','Gram'],['Whole','Whole'] ]),{ :class => 'dropdown2-menu'}) %>

                                    </div>
                                    <div class="btn-group">

                                        <%= f.file_field :image %>
                                    </div>

                                </div>

                            </div>
                            <div class="md-form">
                                <div class="col-sm-12">
                                    <%= f.text_area :Description, rows: '3',class: "form-control", placeholder: "   Enter Description For The Item", autofocus: true %>
                                </div>

                            </div>
                            <div class="md-form">
                                <div class="col-md-6 col-md-offset-2">
                                    <%= f.button :submit, "Add New Item", class: "btn btn-lg btn-success btn-block", style: "background-color:#ff7300;" %><br/>
                                </div>

                            </div>

                        </fieldset>
                    </form>
                    <% end %>
                </div>
                <div class="modal-footer">
                    <div class="options">
                        <p>
                            <%= link_to "Cancel", fridges_path%>
                        </p>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

</div>
