
<%= render 'shared/errors', obj: @accessory %>
<div class="container">
    <div class="row">
        <br/><br/>
        <div class="col-lg-4 col-lg-offset-4">
            <div class="card card-block" style="background-color:#fff;">
                <div class="form-header  purple darken-4" style="background-color:#b579d2 !important;">
                    <h3>
                        <i class="fa fa-cutlery"></i>
                        Add New Accessories </h3>
                </div>

                <div class="md-form">
                    <%= simple_form_for @accessory do |f| %>

                    <form role="form">
                        <fieldset>
                            <div class="form-group">

                                <div class="col-sm-12">

                                    <%= f.text_field :Name, class: "form-control", placeholder: "Enter Accessory Name", autofocus: true %><br/>

                                </div>

                            </div>

                            <div class="form-group">

                                <div class="col-md-12">


                                    <div class="btn-group">

                                        <%= f.file_field :image %><br/><br/>
                                    </div>

                                </div>

                            </div>

                            <div class="md-form">
                                <div class="col-md-12">
                                    <%= f.button :submit, "Add New", class: "btn btn-lg btn-success btn-block" %><br/>
                                </div>

                            </div>

                        </fieldset>
                    </form>
                    <% end %>
                </div>
                <div class="modal-footer">
                    <div class="options">
                        <p>
                            <%= link_to "Cancel", accessories_path%>
                        </p>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

</div>
