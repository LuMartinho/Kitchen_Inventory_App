<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sign up</h3>
                </div>
                <div class="panel-body">
                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= f.error_notification %>
                    <form role="form">
                        <fieldset>
                            <div class="form-group">

                                <div class="col-sm-12">

                                    <%= f.text_field :email,required: true, class: "form-control", placeholder: "Enter Email", autofocus: true %><br/>

                                </div>

                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">

                                    <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control", placeholder: "Enter Password", autofocus: true %>
                                      <br/>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">

                                <%= f.text_field :password_confirmation, required: true, class: "form-control", placeholder: "Confirm Password", autofocus: true %><br/>

                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">

                                    <%= f.button :submit, "Sign up", class: "btn btn-lg btn-success btn-block" %><br/>

                                </div>

                            </div>

                            <!-- Change this to a button or input when using this as a form -->
                            <div class="form-group">
                                <div class="col-md-12 control">
                                    <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                        If you have an account!
                                        <%= render "devise/shared/links" %>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </form>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
