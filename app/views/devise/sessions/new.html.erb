<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <%= f.error_notification %>
                    <form role="form">
                        <fieldset>
                            <div class="form-group">

                                <div class="col-sm-12">

                                    <%= f.text_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %><br/>

                                </div>

                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">

                                    <%= f.text_field :password, class: "form-control", placeholder: "Enter Password", autofocus: true %>

                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">

                                    <div class="checkbox">
                                        <label>
                                            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                                        </label>
                                    </div>

                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">

                                    <%= f.button :submit, "Log in", class: "btn btn-lg btn-success btn-block" %><br/>

                                </div>

                            </div>

                            <!-- Change this to a button or input when using this as a form -->
                            <div class="form-group">
                                <div class="col-md-12 control">
                                    <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                        Don't have an account!
                                        <%= render "devise/shared/links" %>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </form>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
